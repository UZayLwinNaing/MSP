<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header2" >

     <ImageView 
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menubtn"
          android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"/>

    <TextView
    android:id="@+id/txt_dialog_title2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:layout_marginTop="90dp"
    android:text="Search by Category"
    android:textSize="18sp"
    android:layout_below="@+id/iv"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:gravity="center"
    android:textColor="#1084cd" />

   <LinearLayout
       android:id="@+id/liner_eng"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/txt_dialog_title2"
       android:layout_marginBottom="10dp"
       android:layout_marginTop="10dp"
       android:gravity="center"
       android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/tvNay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Naypyitaw  |  "
        android:textSize="14sp"
        android:textColor="#6F6F6F" 
        android:textAppearance="?android:attr/textAppearanceLarge"
       />
    
    <TextView 
        android:id="@+id/tvYan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yangon  |  "
        android:textSize="14sp"
        android:textColor="#6F6F6F" 
        android:textAppearance="?android:attr/textAppearanceLarge"
        />
    
    <TextView 
        android:id="@+id/tvMan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mandalay  |  "
        android:textSize="14sp"
        android:textColor="#6F6F6F" 
        android:textAppearance="?android:attr/textAppearanceLarge"
        />
    
    <TextView 
        android:id="@+id/tvOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Cities"
        android:textSize="14sp"
        android:textColor="#6F6F6F" 
        android:textAppearance="?android:attr/textAppearanceLarge"
        />
    
</LinearLayout>
    
    <ListView
        android:id="@+id/search_cat_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner_eng"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
      
       android:layout_weight="1" >

    </ListView>
    

    

</RelativeLayout>