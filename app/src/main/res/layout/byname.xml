<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/mainscreen">

       <ImageView 
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menubtn"
         android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"/>
    
     
     <TextView
                android:id="@+id/txt_dialog_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv"
                android:text="Search By Name"
                android:textStyle="bold" 
          		android:textColor="#1084cd" 
          		android:textSize="18sp"
                android:layout_marginTop="90dp"
                android:gravity="center"
                
                />
     
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:orientation="vertical"
        android:layout_below="@+id/txt_dialog_title2" >

        <EditText
        android:id="@+id/etbusinessname"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:ems="10" 
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Company Name"
        android:paddingLeft="13dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:background="@drawable/searchfield">
          <requestFocus />
    </EditText>
    
       <Spinner
        
        android:id="@+id/spinner1"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/etbusinessname"
        style="@style/spinner_style"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:drawSelectorOnTop="true"
        android:spinnerMode="dropdown"
        android:dropDownVerticalOffset="1dp"
        />
       
       <Button
            android:id="@+id/btnsearch"
            android:layout_width="275dp"
            android:layout_height="37dp"
            android:text="Search" 
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/searchbtn"
            android:layout_below="@+id/spinner1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"/>
       </LinearLayout>
     

    
</RelativeLayout>